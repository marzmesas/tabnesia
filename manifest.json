{
    "manifest_version": 3,
    "name": "Tabnesia",
    "version": "1.1",
    "description": "Because we all forget what we opened. Analyze and manage your Chrome tabs with usage statistics.",
    "permissions": [
      "tabs",
      "tabGroups",
      "downloads",
      "history",
      "storage"
    ],
    "host_permissions": ["<all_urls>"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "assets/tab_optimizer_icon.png"
    },
    "background": {
      "service_worker": "background.js"
    }
  }
  